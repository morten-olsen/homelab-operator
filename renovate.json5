{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  packageRules: [
    {
      groupName: 'Docker images',
      groupSlug: 'dockerimages',
      matchDatasources: [
        'docker',
      ],
      pinDigests: true,
    },
  ],
  'helm-values': {
    managerFilePatterns: [
      '/^charts/.*/values\\.yaml$/',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^charts/.*/values\\.yaml$/',
      ],
      matchStrings: [
        "repository:s*'(?<depName>.*?)'\ns*tag:s*'(?<currentValue>.*?)'",
        'repository:s*"(?<depName>.*?)"\ns*tag:s*"(?<currentValue>.*?)"',
        'repository:s*(?<depName>.*?)\ns*tag:s*(?<currentValue>.*)',
      ],
      datasourceTemplate: 'docker',
    },
  ],
}
