{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "helm-values": {
    "managerFilePatterns": ["^charts/.*/values\\.yaml$"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "groupName": null,
      "pinDigests": true
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "non-major dependencies",
      "groupSlug": "non-major",
      "pinDigests": true
    }
  ]
}
